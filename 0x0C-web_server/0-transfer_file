#/usr/bin/env bash
# transfer file from client to host

len=$#
if [[ len -lt 3 ]]; then
	echo "usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
elif [[ len -eq 3 ]]; then
	scp  -o StrictHostKeyChecking=no "$1" "$3@$2:~/"
else
	scp -o StrictHostKeyChecking=no -i "$4" "$1" "$3@$2:~/"
fi
